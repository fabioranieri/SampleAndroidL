        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColor">@color/text_secondary</item>

        <item name="android:colorControlHighlight">@color/primary</item>

        <item name="android:navigationBarColor">@color/primary_dark</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <!--item name="android:windowAllowExitTransitionOverlap">true</item -->
        <item name="android:windowSharedElementEnterTransition">@android:transition/no_transition</item>
